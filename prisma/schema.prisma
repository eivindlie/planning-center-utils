generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url = env("DATABASE_URL")
}

model Team {
    id      String  @default(cuid())    @id
    name    String
    members Member[]
}

model Member {
    id          String  @default(cuid())    @id
    pcId        String
    name        String
    team        Team?   @relation(fields: [teamId], references: [id])
    teamId      String?
    blockouts   Blockout[]
    user        User?
}

model Blockout {
    id          String  @default(cuid())    @id
    pcId        String
    reason      String?
    startsAt    DateTime
    endsAt      DateTime
    member      Member  @relation(fields: [memberId], references: [id])
    memberId    String
}

model Plan {
    id          String  @default(cuid())    @id
    pcId        String
    seriesTitle String
    title       String
    date        DateTime
    url         String
}

model User {
    id          String @default(cuid())     @id
    email       String
    name        String
    member      Member? @relation(fields: [memberId], references: [id])
    memberId    String? @unique
    activated   Boolean @default(false)
}